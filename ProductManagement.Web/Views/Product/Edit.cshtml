@model ProductManagement.Application.ViewModels.ProductEditVM
@{
    ViewData["Title"] = "Product edit";
}

<form asp-action="Edit" asp-antiforgery="true" method="post" onsubmit="app.preventMultipleSubmission(this)">
    <input type="hidden" asp-for="ProductId" />
    <div class="form-group row col-12">
        <label asp-for="ProductName" class="col-2 control-label">Product name <sup class="text-danger">*</sup></label>
        <div class="col-6">
            <input type="text" asp-for="ProductName" class="form-control" autocomplete="off">
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row col-12">
        <label asp-for="Description" class="col-2 control-label">Description</label>
        <div class="col-6">
            <textarea asp-for="Description" class="form-control" autocomplete="off"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row col-12">
        <label asp-for="Price" class="col-2 control-label">Price <sup class="text-danger">*</sup></label>
        <div class="col-6">
            <input type="number" asp-for="Price" class="form-control" autocomplete="off">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row col-12">
        <label asp-for="CategoryId" class="col-2 control-label">Category <sup class="text-danger">*</sup></label>
        <div class="col-4">
            <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control"></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row col-12">
        <label asp-for="ManufacturerId" class="col-2 control-label">Manufacturer <sup class="text-danger">*</sup></label>
        <div class="col-4">
            <select asp-for="ManufacturerId" asp-items="Model.Manufacturers" class="form-control"></select>
            <span asp-validation-for="ManufacturerId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row col-12">
        <label asp-for="SupplierId" class="col-2 control-label">Supplier <sup class="text-danger">*</sup></label>
        <div class="col-4">
            <select asp-for="SupplierId" asp-items="Model.Suppliers" class="form-control"></select>
            <span asp-validation-for="SupplierId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row col-12">
        <div class="col-2">
            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Cancel</a>
            <input type="submit" class="btn btn-primary" value="Save">
        </div>
    </div>
</form>
